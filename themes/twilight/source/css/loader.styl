[data-theme="dark"]
  #loader
    .loader-backdrop
      background-color: rgba(0, 0, 0, 0.55)

    .loading-word
      color: rgba(255, 255, 255, 0.92)

#loader
  position: fixed
  inset: 0
  z-index: 3000
  opacity: 1
  visibility: visible
  pointer-events: auto
  transition: opacity .35s ease, visibility .35s ease

  .loader-backdrop
    position: absolute
    inset: 0
    background-color: rgba(255, 255, 255, 0.92)
    backdrop-filter: blur(6px)

  .loader-content
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    display: flex
    flex-direction: column
    align-items: center
    gap: 14px
    padding: 22px 26px
    border-radius: 14px
    background: rgba(255, 255, 255, 0.70)
    box-shadow: var(--shadow-card)

  .rotate
    animation: rotate-all 1s linear infinite

  .loader-icon
    width: 44px
    height: 44px
    border-radius: 10px

  .loader-spinner
    width: 34px
    height: 34px
    border-radius: 50%
    border: 3px solid rgba(0, 0, 0, 0.12)
    border-top-color: var(--red-1, #ff5252)

  .loading-word
    color: rgba(0, 0, 0, 0.72)
    font: 600 1rem unquote(custom-article-families) unquote(article-families) unquote(local-article-families)

#loader.loading
  opacity: 0
  visibility: hidden
  pointer-events: none

